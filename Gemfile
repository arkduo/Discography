gem 'font-awesome-rails'
# アップロード・画像加工
gem 'rmagick'
gem 'carrierwave'
# デバッグ
gem 'pry-rails'
# ユーザ管理
# gem 'devise'
# gem 'cancan'
# gem 'rails_admin'
# ログの簡略化
gem 'quiet_assets'
# コーディングルールチェック
gem 'rubocop'
